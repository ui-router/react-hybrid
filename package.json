{
  "name": "@uirouter/react-hybrid",
  "version": "0.3.12",
  "scripts": {
    "clean": "shx rm -rf lib lib-esm _bundles",
    "compile": "npm run clean && tsc && tsc --module es6 --outDir lib-esm",
    "bundle": "rollup -c && rollup -c --environment MINIFY",
    "fixmaps:lib": "tweak_sourcemap_paths -a --include 'lib/**/*.js.map' 'lib-esm/**/*.js.map'",
    "fixmaps:bundle": "tweak_sourcemap_paths -a --include '_bundles/**/*.js.map'",
    "build": "run-s compile bundle fixmaps:*",
    "test": "npm run build",
    "test:downstream": "test_downstream_projects",
    "prepublishOnly": "npm run build",
    "release": "release --deps @uirouter/core @uirouter/react @uirouter/angularjs"
  },
  "license": "MIT",
  "dependencies": {
    "@uirouter/angularjs": "1.0.23",
    "@uirouter/core": "6.0.1",
    "@uirouter/react": "0.8.10"
  },
  "peerDependencies": {
    "angular": "^1.5.0",
    "react": ">=15.0.0"
  },
  "devDependencies": {
    "@types/angular": "^1.6.56",
    "@types/jquery": "^3.3.31",
    "@types/react": "^16.7.18",
    "@uirouter/publish-scripts": "^2.3.38",
    "angular": "^1.7.9",
    "husky": "^1.3.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.11.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rollup": "^1.27.5",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-uglify": "^6.0.3",
    "typescript": "^3.7.2"
  },
  "main": "_bundles/ui-router-react-hybrid.js",
  "module": "lib-esm/index.js",
  "typings": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/ui-router/react-hybrid.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
